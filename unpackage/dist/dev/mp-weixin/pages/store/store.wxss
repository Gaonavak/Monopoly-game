.out {
  padding: 0 20px;
  margin-top: 40px;
  position: relative;
}
.out input {
  border: 1px solid #ccc;
  height: 40px;
  position: relative;
  z-index: 2;
  background: #fff;
}
.out .pic {
  width: 24px;
  height: 24px;
  z-index: 1;
  position: absolute;
  top: 20px;
  left: calc(50% - 12px);
  transition: top 0.3s;
}
.out .pic.active {
  top: -12px;
}
.out swiper {
  width: 90vw;
  height: 180px;
  border: 1px solid green;
}
.out swiper swiper-item {
  width: 100%;
  height: 100%;
  background: pink;
}
.out swiper swiper-item:nth-child(2n) {
  background: orange;
}
.out image {
  width: 100%;
  height: 100%;
}